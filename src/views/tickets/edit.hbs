<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Asignaci√≥n</h3>
        </div>
        <div class="card-body">
            <form action="/edit/{{ticket._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <div class="form-group">
                        <input type="text" name="type" value="{{ticket.type}}" class="form-control" autofocus>
                    </div>
                    <br>
                    <div class="form-group">
                        <textarea name="description" class="form-control">
                            {{ticket.description}}
                        </textarea>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="status" value="{{ticket.status}}" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="personal" value="{{ticket.personal}}" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="area" value="{{ticket.area}}" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="name" value="{{ticket.name}}" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <button class="btn btn-success btn-block" type="submit">
                            Asignar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>