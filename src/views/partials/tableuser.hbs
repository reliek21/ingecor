<div class="table-responsive">
    <table class="table table-striped table-sm caption-top">
        <caption>Pendientes</caption>
        <thead>
            <tr class="table-dark">
                <th scope="col" class="text-center">Asignación</th>
                <th scope="col" class="text-center">Nombre del Software</th>
                <th scope="col" class="text-center">Tipo de ticket</th>
                <th scope="col" class="text-center">Descripción</th>
                {{!-- <th scope="col" class="text-center">Fecha de creación</th> --}}
                <th scope="col" class="text-center">Tipo de Software</th>
                <th scope="col" class="text-center">Estado</th>
            </tr>
        </thead>
        <tbody>

            {{#each tickets}}
            <tr>
                <td class="text-center align-middle">
                    <a href="/edit/{{_id}}" class="btn btn-warning text-white">
                        Asignar
                    </a>
                </td>
                <td class="text-center align-middle">{{name}}</td>
                <td class="text-center align-middle">{{type}}</td>
                <td class="text-center align-middle">{{description}}</td>
                {{!-- <td class="text-center align-middle">{{date}}</td> --}}
                <td class="text-center align-middle">{{area}}</td>
                <td class="text-danger text-center align-middle"><i class="bi bi-archive"></i> {{status}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
</div>